schema kode_app {
    document kode_app {
        field title type string {
            indexing: summary | index
            index: enable-bm25
        }
        field text type string {
            indexing: attribute | summary | index
            attribute: fast-search
            index: enable-bm25
            summary: dynamic
        }
        field timestamp type long {
            indexing: attribute | summary
        }
        field url type string {
            indexing: summary
        }
    }

    field text_embedding type tensor<float>(x[384]) {
        indexing: input text | embed e5 | attribute | index
        attribute {
            distance-metric: angular
        }
    }

    rank-profile default inherits default {
        inputs {
            query(e) tensor<float>(x[384])
        }

        first-phase {
            expression: nativeRank(title) * 2 + nativeRank(text) + closeness(field, text_embedding)
        }

        match-features: bm25(title) bm25(text) closeness(field, text_embedding)
        global-phase {
            expression {
              reciprocal_rank(closeness(field, text_embedding)) + 
              reciprocal_rank(bm25(text)) + 2 * reciprocal_rank(bm25(title))
            }
        }
    }
}
